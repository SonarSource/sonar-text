{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "AbstractMetadata": {
      "type": "object",
      "properties": {
        "impact": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "references": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Reference"
          }
        }
      },
      "required": [
        "name"
      ]
    },
    "BooleanMatch": {
      "type": "object",
      "patternProperties": {
        "^match-(each|either)$": {
          "$ref": "#/$defs/ListOfMatches"
        }
      },
      "additionalProperties": false,
      "maxProperties": 1,
      "minProperties": 1
    },
    "ListOfMatches": {
      "minItems": 2,
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "#/$defs/PatternMatch"
          },
          {
            "$ref": "#/$defs/BooleanMatch"
          }
        ]
      }
    },
    "Modules": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "matching": {
          "$ref": "#/$defs/BooleanMatch"
        },
        "post": {
          "$ref": "#/$defs/PostModule"
        },
        "pre": {
          "$ref": "#/$defs/PreModule"
        }
      },
      "required": [
        "matching"
      ]
    },
    "PatternMatch": {
      "type": "object",
      "patternProperties": {
        "^pattern(-after|-around|-before|-not)?$": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "maxProperties": 1,
      "minProperties": 1
    },
    "PostModule": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "heuristic-filter": {
          "additionalProperties": false,
          "type": "object",
          "properties": {
            "heuristics": {
              "$ref": "#/$defs/StringList"
            },
            "input-string": {
              "type": "string"
            }
          },
          "required": [
            "heuristics"
          ]
        },
        "pattern-not": {
          "type": "string"
        },
        "statistical-filter": {
          "additionalProperties": false,
          "type": "object",
          "properties": {
            "input-string": {
              "type": "string"
            },
            "threshold": {
              "type": "integer"
            }
          },
          "required": [
            "threshold"
          ]
        }
      }
    },
    "PreModule": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "include": {
          "additionalProperties": false,
          "type": "object",
          "properties": {
            "content": {
              "$ref": "#/$defs/StringList"
            },
            "ext": {
              "$ref": "#/$defs/StringList"
            },
            "paths": {
              "$ref": "#/$defs/StringList"
            }
          }
        },
        "reject": {
          "additionalProperties": false,
          "type": "object",
          "properties": {
            "paths": {
              "$ref": "#/$defs/StringList"
            }
          },
          "required": [
            "paths"
          ]
        }
      }
    },
    "Reference": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "link": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "Standards",
            "Conference Presentations",
            "Articles & blog posts",
            "Documentation"
          ]
        }
      },
      "required": [
        "description",
        "link",
        "type"
      ]
    },
    "RuleExample": {
      "additionalProperties": false,
      "minItems": 1,
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "contains_secret": {
            "type": "boolean"
          },
          "match": {
            "type": "string"
          },
          "text": {
            "type": "string"
          }
        },
        "required": [
          "text",
          "contains_secret"
        ]
      }
    },
    "StringList": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "type": "object",
  "properties": {
    "provider": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "metadata": {
          "allOf": [
            {
              "$ref": "#/$defs/AbstractMetadata"
            },
            {
              "type": "object",
              "properties": {
                "category": {
                  "type": "string"
                },
                "fix": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                }
              },
              "required": [
                "category",
                "message"
              ]
            }
          ]
        },
        "modules": {
          "$ref": "#/$defs/Modules"
        }
      },
      "required": [
        "metadata"
      ]
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "examples": {
            "$ref": "#/$defs/RuleExample"
          },
          "id": {
            "type": "string"
          },
          "metadata": {
            "allOf": [
              {
                "$ref": "#/$defs/AbstractMetadata"
              },
              {
                "type": "object",
                "properties": {
                  "charset": {
                    "type": "string"
                  },
                  "disabled": {
                    "type": "boolean"
                  },
                  "message": {
                    "type": "string"
                  }
                },
                "required": [
                  "charset"
                ]
              }
            ]
          },
          "modules": {
            "$ref": "#/$defs/Modules"
          }
        },
        "required": [
          "examples",
          "id",
          "metadata",
          "modules"
        ]
      }
    }
  },
  "required": [
    "provider",
    "rules"
  ],
  "additionalProperties": false
}
