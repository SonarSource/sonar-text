{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$defs": {
    "AbstractMetadata": {
      "type": "object",
      "properties": {
        "impact": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "references": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/Reference"
          }
        }
      },
      "required": [
        "name"
      ]
    },
    "BooleanMatch": {
      "type": "object",
      "patternProperties": {
        "^match(Each|Either)$": {
          "$ref": "#/$defs/ListOfMatches"
        }
      },
      "additionalProperties": false,
      "maxProperties": 1,
      "minProperties": 1
    },
    "Detection": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "matching": {
          "$ref": "#/$defs/Matching"
        },
        "post": {
          "$ref": "#/$defs/PostModule"
        },
        "pre": {
          "$ref": "#/$defs/PreModule"
        }
      },
      "required": [
        "matching"
      ]
    },
    "ListOfMatches": {
      "minItems": 2,
      "type": "array",
      "items": {
        "oneOf": [
          {
            "$ref": "#/$defs/PatternMatch"
          },
          {
            "$ref": "#/$defs/BooleanMatch"
          }
        ]
      }
    },
    "Matching": {
      "type": "object",
      "patternProperties": {
        "^match(Each|Either)$": {
          "$ref": "#/$defs/ListOfMatches"
        },
        "^pattern$": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "maxProperties": 1,
      "minProperties": 1
    },
    "PatternMatch": {
      "type": "object",
      "patternProperties": {
        "^pattern(After|Around|Before|Not)?$": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "maxProperties": 1,
      "minProperties": 1
    },
    "PostModule": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "heuristicFilter": {
          "additionalProperties": false,
          "type": "object",
          "properties": {
            "heuristics": {
              "$ref": "#/$defs/StringList"
            },
            "inputString": {
              "type": "string"
            }
          },
          "required": [
            "heuristics"
          ]
        },
        "patternNot": {
          "type": "string"
        },
        "statisticalFilter": {
          "additionalProperties": false,
          "type": "object",
          "properties": {
            "inputString": {
              "type": "string"
            },
            "threshold": {
              "type": "integer"
            }
          },
          "required": [
            "threshold"
          ]
        }
      }
    },
    "PreModule": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "include": {
          "additionalProperties": false,
          "type": "object",
          "properties": {
            "content": {
              "$ref": "#/$defs/StringList"
            },
            "ext": {
              "$ref": "#/$defs/StringList"
            },
            "paths": {
              "$ref": "#/$defs/StringList"
            }
          }
        },
        "reject": {
          "additionalProperties": false,
          "type": "object",
          "properties": {
            "paths": {
              "$ref": "#/$defs/StringList"
            }
          },
          "required": [
            "paths"
          ]
        }
      }
    },
    "Reference": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "link": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "Standards",
            "Conference Presentations",
            "Articles & blog posts",
            "Documentation"
          ]
        }
      },
      "required": [
        "description",
        "link",
        "type"
      ]
    },
    "RuleExample": {
      "additionalProperties": false,
      "minItems": 1,
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "containsSecret": {
            "type": "boolean"
          },
          "match": {
            "type": "string"
          },
          "text": {
            "type": "string"
          }
        },
        "required": [
          "text",
          "containsSecret"
        ]
      }
    },
    "StringList": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "type": "object",
  "properties": {
    "provider": {
      "additionalProperties": false,
      "type": "object",
      "properties": {
        "rules": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "examples": {
                "$ref": "#/$defs/RuleExample"
              },
              "id": {
                "type": "string"
              },
              "metadata": {
                "allOf": [
                  {
                    "$ref": "#/$defs/AbstractMetadata"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "charset": {
                        "type": "string"
                      },
                      "defaultProfile": {
                        "type": "boolean"
                      },
                      "message": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "charset"
                    ]
                  }
                ]
              },
              "detection": {
                "$ref": "#/$defs/Detection"
              }
            },
            "required": [
              "examples",
              "id",
              "metadata",
              "detection"
            ]
          }
        },
        "metadata": {
          "allOf": [
            {
              "$ref": "#/$defs/AbstractMetadata"
            },
            {
              "type": "object",
              "properties": {
                "category": {
                  "type": "string"
                },
                "fix": {
                  "type": "string"
                },
                "message": {
                  "type": "string"
                }
              },
              "required": [
                "category",
                "message"
              ]
            }
          ]
        },
        "detection": {
          "$ref": "#/$defs/Detection"
        }
      },
      "required": [
        "rules",
        "metadata"
      ]
    }
  },
  "required": [
    "provider"
  ],
  "additionalProperties": false
}
